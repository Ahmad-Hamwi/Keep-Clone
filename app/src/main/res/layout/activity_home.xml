<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.ahmadhamwi.keepclone.presentation.ui.navigation.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.navigation.home.HomeActivity">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/app_floating_toolbar" />

        <RelativeLayout
            android:animateLayoutChanges="true"
            android:id="@+id/no_notes_yet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/no_notes_background"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_bulb"/>

            <TextView
                android:layout_marginTop="@dimen/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:layout_below="@id/no_notes_background"
                android:text="Notes you add appear here"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_notes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            tools:listitem="@layout/item_note_home"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:loadData="@{viewModel.activeNotesLiveData}"/>

        <com.ahmadhamwi.keepclone.presentation.ui.customviews.CurvedBottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardElevation="20dp"
            android:elevation="20dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_note_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="34dp"
            android:background="@drawable/google_add"
            android:backgroundTint="@color/colorPrimary"
            app:tint="@null"
            android:contentDescription="Add Note"
            android:elevation="20dp"
            android:src="@drawable/google_add"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/fabRippleColor" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>